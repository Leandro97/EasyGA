#:kivy 1.11.0

<CustButton@Button>:
	font_size: 12
	color: 0, 0, 0, 1
	background_normal: ''
	background_color: .88, .88, .88, 1
	size_hint: .2, .1

<FloatLayout>:
	CustButton:
		text: "Top left"
		pos_hint: {"left": 1, "top": 1}

	CustButton:
		text: "Bottom left"
		pos_hint: {"left": 1, "bottom": 1}

	CustButton:
		text: "Top right"
		pos_hint: {"right": 1, "top": 1}

	CustButton:
		text: "Bottom right"
		pos_hint: {"right": 1, "bottom": 1}

	CustButton:
		text: "Center"
		pos_hint: {"center_x": .5, "center_y": .5}

	